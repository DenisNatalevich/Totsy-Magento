<?xml version="1.0"?>
<config>
    <modules>
        <Totsy_CatalogInventory>
            <version>0.1.1</version>
        </Totsy_CatalogInventory>
    </modules>
    <global>
        <models>
            <cataloginventory>
                <!-- <class>Totsy_CatalogInventory_Model_Stock_Item</class> -->
                <rewrite>
                    <stock_status>Totsy_CatalogInventory_Model_Stock_Status</stock_status>
                    <stock>Totsy_CatalogInventory_Model_Stock</stock>
                </rewrite>
            </cataloginventory>
        </models>
    </global>
    <frontend>
        <routers>
            <cataloginventory>
                <use>standard</use>
                <args>
                    <module>Totsy_CatalogInventory</module>
                    <frontName>cataloginventory</frontName>
                </args>
            </cataloginventory>
        </routers>
    </frontend>
</config>