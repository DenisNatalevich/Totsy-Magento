<config>
    <modules>
        <Totsy_Customer>
            <version>0.1.0</version>
        </Totsy_Customer>
    </modules>
    <global>
        <models>
            <totsycustomer>
                <class>Totsy_Customer_Model</class>
            </totsycustomer>
        </models>
        <resources>
            <totsycustomer_setup>
                <setup>
                    <module>Totsy_Customer</module>
                    <class>Totsy_Customer_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </totsycustomer_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <totsy>
                <use>admin</use>
                <args>
                    <module>Totsy_Customer</module>
                    <frontName>totsy</frontName>
                </args>
            </totsy>
        </routers>
    </admin>
</config>
