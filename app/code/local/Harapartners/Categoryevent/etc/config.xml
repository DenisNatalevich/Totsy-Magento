<config>
    <modules>
        <Harapartners_Categoryevent>
            <version>1.0.1</version>
        </Harapartners_Categoryevent>
    </modules>
    <global>
        <blocks>
            <categoryevent>
                <class>Harapartners_Categoryevent_Block</class>
            </categoryevent>
        </blocks>
        <helpers>
            <categoryevent>
                <class>Harapartners_Categoryevent_Helper</class>
            </categoryevent>
        </helpers>
        <models>
            <categoryevent>
                <class>Harapartners_Categoryevent_Model</class>
                <resourceModel>categoryevent_mysql4</resourceModel>
            </categoryevent>
            <categoryevent_mysql4>
                <class>Harapartners_Categoryevent_Model_Mysql4</class>
                <entities>
                    <sortentry>
                        <table>categoryevent_sortentry</table>
                    </sortentry>
                </entities>
            </categoryevent_mysql4>
        </models>
        <resources>
            <categoryevent_setup>
                <setup>
                    <module>Harapartners_Categoryevent</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </categoryevent_setup>
            <categoryevent_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </categoryevent_write>
            <categoryevent_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </categoryevent_read>        
        </resources>
    </global>
    <frontend>
        <routers>
            <categoryevent>
                <use>standard</use>
                <args>
                    <module>Harapartners_Categoryevent</module>
                    <frontName>event</frontName>
                </args>
            </categoryevent>
        </routers>
        <layout>
            <updates>
                <categoryevent>
                    <file>categoryevent.xml</file>
                </categoryevent>
            </updates>
        </layout>
        <cache>
            <requests>
                <event>enterprise_pagecache/processor_default</event>
            </requests>
        </cache>
    </frontend>
    <admin>
        <routers>
            <categoryevent>
                <use>admin</use>
                <args>
                    <module>Harapartners_Categoryevent</module>
                    <frontName>categoryevent</frontName>
                </args>
            </categoryevent>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <catalog>
                <children>
                    <categoryevent translate="title" module="categoryevent">
                        <title>Browse Categories/Events</title>
                        <sort_order>0</sort_order>
                        <action>categoryevent/adminhtml_browse</action>
                    </categoryevent>
                </children>
                <children>
                    <sortcategoryevent translate="title" module="categoryevent">
                        <title>Sort Categories/Events</title>
                        <sort_order>0</sort_order>
                        <action>categoryevent/adminhtml_sort</action>
                    </sortcategoryevent>
                </children>
            </catalog>
        </menu>
        <layout>
            <updates>
                <categoryevent>
                    <file>categoryevent.xml</file>
                </categoryevent>
            </updates>
        </layout>
    </adminhtml>
    <crontab>
        <jobs>
            <categoryevent_rebuild_sort_cron>
                <schedule>
                    <cron_expr>5 3 * * *</cron_expr>
                </schedule>
                <run>
                    <model>categoryevent/sortentry::rebuildSortCron</model>
                </run>
            </categoryevent_rebuild_sort_cron>            
            <categoryevent_clean_expired_cron>
                <schedule>
                    <cron_expr>0 4 * * *</cron_expr>
                </schedule>
                <run>
                    <model>categoryevent/sortentry::cleanUpExpiredEvents</model>
                </run>
            </categoryevent_clean_expired_cron>
        </jobs>
    </crontab>
</config>
