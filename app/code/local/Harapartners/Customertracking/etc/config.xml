                        <method>addPageViewCount</method>
                    </customertracking>
                </observers>
            </http_response_send_before>
        </events-->        
    </global>
    <frontend>
        <routers>
            <customertracking>
                <use>standard</use>
                <args>
                    <module>Harapartners_Customertracking</module>
                    <frontName>customertracking</frontName>
                </args>
            </customertracking>
        </routers>
        <layout>
            <updates>
                <customertracking>
                    <file>customertracking.xml</file>
                </customertracking>
            </updates>
        </layout>
        <!--cache>
            <requests>
                <customer>
                    <account>
                        <create>enterprise_pagecache/processor_default</create>
                        <forgotpassword>enterprise_pagecache/processor_default</forgotpassword>
                        <login>enterprise_pagecache/processor_default</login>
                    </account>
                </customer>
            </requests>
        </cache-->
    </frontend>
    <admin>
        <routers>
            <customertracking>
                <use>admin</use>
                <args>
                    <module>Harapartners_Customertracking</module>
                    <frontName>adminhtml_customertracking</frontName>
                </args>
            </customertracking>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <marketing>
                <children>
                    <customertracking translate="title" module="customertracking">
                        <title>Affiliate Customer Tracking</title>
                        <sort_order>20</sort_order>
                        <action>adminhtml_customertracking/adminhtml_record</action>
                    </customertracking>
                </children>
            </marketing>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <marketing>
                            <children>
                                <customertracking translate="title" module="customertracking">
                                    <title>Affiliate Customer Tracking</title>
                                    <sort_order>20</sort_order>
                                </customertracking>
                            </children>
                        </marketing>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
