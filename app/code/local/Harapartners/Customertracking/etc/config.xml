<config>
    <modules>
        <Harapartners_Customertracking>
            <version>1.0.2</version>
        </Harapartners_Customertracking>
    </modules>
    <global>
        <blocks>
            <customertracking>
                <class>Harapartners_Customertracking_Block</class>
            </customertracking>
        </blocks>
        <helpers>
            <customertracking>
                <class>Harapartners_Customertracking_Helper</class>
            </customertracking>
        </helpers>
        <models>
            <customertracking>
                <class>Harapartners_Customertracking_Model</class>
                <resourceModel>customertracking_mysql4</resourceModel>
            </customertracking>
            <customertracking_mysql4>
                <class>Harapartners_Customertracking_Model_Mysql4</class>
                <entities>
                    <record>
                        <table>customertracking_record</table>
                    </record>
                </entities>
            </customertracking_mysql4>
        </models>
        <resources>
            <customertracking_setup>
                <setup>
                    <module>Harapartners_Customertracking</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customertracking_setup>
            <customertracking_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </customertracking_write>
            <customertracking_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </customertracking_read>        
        </resources>
        <!--Moved to Harapartners_Service-->
