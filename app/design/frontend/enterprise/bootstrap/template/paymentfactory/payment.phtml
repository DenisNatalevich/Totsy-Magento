<?php
    $baseurl = Mage::getUrl('',array('_forced_secure'=>true));
    $customer = Mage::getSingleton('customer/session')->getCustomer();
    $id = $customer->getId(); 
    $paymentCollection = Mage::getModel('paymentfactory/profile')->loadByCustomerId($id);
    $creditCardsCount = 0;
?>
