	$endcount_lc = date("F j, Y, G:i:s", $endcount_utc);
	$startcount_lc = date("F j, Y, G:i:s", $startcount_utc);
	
	if (strtotime($now) >= strtotime( $startcount_lc )){
		$timecount = $endcount_lc;
